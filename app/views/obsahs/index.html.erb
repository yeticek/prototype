    <strong><%= link_to 'Profesijne odbory', profesia_path %></strong>
    <right><strong><%= link_to 'Login/Log Out', root_path %></strong></right>
    <right><strong><%= link_to 'Registracia', root_path %></strong></right>
  </nav>
