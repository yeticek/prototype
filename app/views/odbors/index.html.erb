
<%= link_to 'New Odbor', new_odbor_path %>

<table class="table table-bordered">
  <thead>
  <tr>
    <th >  Cislo  </th>
    <th>  Nazov  </th>
    <th colspan="3" rowspan="3" ></th>
  </tr>
  </thead>

  <tbody>
  <% @odbors.each do |odbor| %>
      <tr>
        <td><%= odbor.cislo %></td>
        <td><%= odbor.nazov %></td>
        <td width="20%">
          <button type="submit" class="btn btn-info "><%= link_to 'Show', odbor %></button>
          <button type="submit" class="btn btn-default"><%= link_to 'Edit', edit_odbor_path(odbor) %></button>
          <button type="submit" class="btn btn-warning "><%= link_to 'Destroy', odbor, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

